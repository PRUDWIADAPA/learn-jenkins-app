pipeline {
    agent any

    stages {
        stage('Test') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh '''
                ls -a
               grep "index.html" /build
                npm --version
                node --version
                npm ci
                npm test
                '''
            }
        }
    }
}
