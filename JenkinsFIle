pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh '''
                ls -a
                npm --version
                node --version
                npm ci
                npm build run
                ls -a
                '''
            }
        }
        stage('Test') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh '''
                ls -a
               ls build |grep "index.html"
                npm --version
                node --version
                npm ci
                npm test
                '''
            }
        }
    }
}
