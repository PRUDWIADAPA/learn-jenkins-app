pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh '''
                ls -a
                npm --version
                node --version
                npm ci
                npm run build
                ls -R
                '''
            }
        }
        stage('Test') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
             
                sh '''
               test -f build/index.html || echo "Error: index.html not found!"
                npm test
                '''
            }
        }
    }
}
